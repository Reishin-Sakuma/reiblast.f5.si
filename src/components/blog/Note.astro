---
interface Props {
  type?: 'info' | 'warning' | 'tip' | 'danger';
  title?: string;
}

const { type = 'info', title } = Astro.props;

const icons = {
  info: '‚ÑπÔ∏è',
  warning: '‚ö†Ô∏è',
  tip: 'üí°',
  danger: 'üö®',
};

const defaultTitles = {
  info: 'ÊÉÖÂ†±',
  warning: 'Ê≥®ÊÑè',
  tip: '„Éí„É≥„Éà',
  danger: 'Ë≠¶Âëä',
