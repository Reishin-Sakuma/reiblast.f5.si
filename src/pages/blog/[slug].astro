---
import { getCollection } from 'astro:content';
import type { GetStaticPaths } from 'astro';
import Layout from '../../layouts/Layout.astro';

export const getStaticPaths: GetStaticPaths = async () => {
  const posts = await getCollection('blog', ({ data }) => {
    return data.draft !== true;
  });

  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
};

const { post } = Astro.props;
const { Content, headings } = await post.render();

// Google AdSense
// 環境変数 PUBLIC_ADSENSE_CLIENT_ID と PUBLIC_ADSENSE_SLOT_ARTICLE が設定されていると広告が表示されます
const adsenseClientId = import.meta.env.PUBLIC_ADSENSE_CLIENT_ID;
// 記事内広告スロットID（AdSense管理画面で「記事内広告」または「ディスプレイ広告」を作成し、スロットIDを設定）
const adsenseSlotArticle = import.meta.env.PUBLIC_ADSENSE_SLOT_ARTICLE;
const showAds = adsenseClientId && adsenseSlotArticle;

const tocHeadings = headings.filter((h) => h.depth <= 3);

function formatDate(date: Date): string {
  return new Intl.DateTimeFormat('ja-JP', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
    hour: '2-digit',
    minute: '2-digit',
  }).format(date);
}
---

<Layout title={`${post.data.title} - Blog`} description={post.data.description}>
  <main>
    <article class="blog-post">
      <div class="container">
        <!-- Breadcrumb -->
        <nav class="breadcrumb">
          <a href="/">ホーム</a>
          <span class="separator">/</span>
          <a href="/blog">Blog</a>
          <span class="separator">/</span>
          <span class="current">{post.data.title}</span>
        </nav>

        <!-- Post Header -->
        <header class="post-header">
          <h1 class="post-title">{post.data.title}</h1>
          <div class="post-meta">
            <time datetime={post.data.pubDate.toISOString()}>
              {formatDate(post.data.pubDate)}
            </time>
            <span class="separator">·</span>
            <span class="author">{post.data.author}</span>
            {post.data.updatedDate && (
              <>
                <span class="separator">·</span>
                <span class="updated">更新: {formatDate(post.data.updatedDate)}</span>
              </>
            )}
          </div>
          {post.data.tags && post.data.tags.length > 0 && (
            <div class="post-tags">
              {post.data.tags.map((tag) => (
                <span class="tag">{tag}</span>
              ))}
            </div>
          )}
        </header>

        <!-- 広告: 記事ヘッダー直下（高収益ポジション） -->
        {showAds && (
          <div class="ad-unit ad-unit-header">
            <ins
              class="adsbygoogle"
              style="display:block"
              data-ad-client={adsenseClientId}
              data-ad-slot={adsenseSlotArticle}
              data-ad-format="auto"
              data-full-width-responsive="true"
            ></ins>
            <script>(adsbygoogle = window.adsbygoogle || []).push({});</script>
          </div>
        )}

        <div class="post-layout">
          <!-- Post Content -->
          <div class="post-content">
            <Content />
          </div>

          <!-- Table of Contents + サイドバー広告 -->
          <aside class="toc">
            {tocHeadings.length > 0 && (
              <div class="toc-inner">
                <p class="toc-title">目次</p>
                <nav>
                  <ul class="toc-list">
                    {tocHeadings.map((heading) => (
                      <li class={`toc-item toc-h${heading.depth}`}>
                        <a href={`#${heading.slug}`}>{heading.text}</a>
                      </li>
                    ))}
                  </ul>
                </nav>
              </div>
            )}
            <!-- 広告: サイドバー（スクロール中に継続表示） -->
            {showAds && (
              <div class="ad-unit ad-unit-sidebar">
                <ins
                  class="adsbygoogle"
                  style="display:block"
                  data-ad-client={adsenseClientId}
                  data-ad-slot={adsenseSlotArticle}
                  data-ad-format="auto"
                  data-full-width-responsive="true"
                ></ins>
                <script>(adsbygoogle = window.adsbygoogle || []).push({});</script>
              </div>
            )}
          </aside>
        </div>

        <!-- 広告: 記事末尾（読了後の高収益ポジション） -->
        {showAds && (
          <div class="ad-unit ad-unit-footer">
            <ins
              class="adsbygoogle"
              style="display:block"
              data-ad-client={adsenseClientId}
              data-ad-slot={adsenseSlotArticle}
              data-ad-format="auto"
              data-full-width-responsive="true"
            ></ins>
            <script>(adsbygoogle = window.adsbygoogle || []).push({});</script>
          </div>
        )}

        <!-- Post Footer -->
        <footer class="post-footer">
          <a href="/blog" class="back-link">← ブログ一覧に戻る</a>
        </footer>
      </div>
    </article>
  </main>

  <style>
    .blog-post {
      padding: 2rem 0 4rem;
    }

    .container {
      max-width: 1100px;
      margin: 0 auto;
      padding: 0 1.5rem;
    }

    /* Breadcrumb */
    .breadcrumb {
      margin-bottom: 2rem;
      font-size: 0.875rem;
      color: var(--text-secondary);
    }

    .breadcrumb a {
      color: var(--primary);
      text-decoration: none;
    }

    .breadcrumb a:hover {
      text-decoration: underline;
    }

    .breadcrumb .separator {
      margin: 0 0.5rem;
    }

    .breadcrumb .current {
      color: var(--text);
    }

    /* Post Header */
    .post-header {
      margin-bottom: 3rem;
      padding-bottom: 2rem;
      border-bottom: 2px solid var(--border);
      max-width: 800px;
    }

    .post-title {
      font-size: 2.5rem;
      font-weight: 800;
      line-height: 1.2;
      margin-bottom: 1rem;
      color: var(--text);
    }

    .post-meta {
      display: flex;
      align-items: center;
      flex-wrap: wrap;
      gap: 0.5rem;
      color: var(--text-secondary);
      font-size: 0.9375rem;
      margin-bottom: 1rem;
    }

    .post-meta .separator {
      opacity: 0.5;
    }

    .post-tags {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
    }

    .tag {
      padding: 0.375rem 0.75rem;
      background: rgba(37, 99, 235, 0.1);
      color: var(--primary);
      border-radius: 0.375rem;
      font-size: 0.875rem;
      font-weight: 500;
    }

    /* Layout */
    .post-layout {
      display: grid;
      grid-template-columns: 1fr 240px;
      gap: 3rem;
      align-items: start;
    }

    /* Table of Contents */
    .toc {
      position: sticky;
      top: 2rem;
    }

    .toc-inner {
      background: var(--surface);
      border: 1px solid var(--border);
      border-radius: 0.75rem;
      padding: 1.25rem;
    }

    .toc-title {
      font-size: 0.875rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      color: var(--text-secondary);
      margin-bottom: 0.75rem;
    }

    .toc-list {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .toc-item {
      margin-bottom: 0.375rem;
      line-height: 1.4;
    }

    .toc-item a {
      color: var(--text-secondary);
      text-decoration: none;
      font-size: 0.875rem;
      transition: color 0.15s;
      display: block;
    }

    .toc-item a:hover {
      color: var(--primary);
    }

    .toc-h2 {
      padding-left: 0;
    }

    .toc-h3 {
      padding-left: 1rem;
    }

    /* Post Content */
    .post-content {
      font-size: 1.0625rem;
      line-height: 1.8;
      color: var(--text);
      min-width: 0;
    }

    .post-content :global(h1),
    .post-content :global(h2),
    .post-content :global(h3),
    .post-content :global(h4) {
      margin-top: 2.5rem;
      margin-bottom: 1rem;
      font-weight: 700;
      line-height: 1.3;
      color: var(--text);
    }

    .post-content :global(h1) { font-size: 2rem; }

    .post-content :global(h2) {
      font-size: 1.75rem;
      position: relative;
      padding-bottom: 0.5rem;
    }

    .post-content :global(h2::after) {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      width: 2.5rem;
      height: 3px;
      background: linear-gradient(to right, var(--text) 50%, var(--text-secondary) 50%);
    }

    .post-content :global(h3) { font-size: 1.5rem; }
    .post-content :global(h4) { font-size: 1.25rem; }

    .post-content :global(p) {
      margin-bottom: 1.5rem;
    }

    .post-content :global(a) {
      color: var(--primary);
      text-decoration: underline;
    }

    .post-content :global(a:hover) {
      color: var(--primary-dark);
    }

    .post-content :global(ul),
    .post-content :global(ol) {
      margin-bottom: 1.5rem;
      padding-left: 2rem;
    }

    .post-content :global(li) {
      margin-bottom: 0.5rem;
    }

    /* Inline code */
    .post-content :global(code:not(pre code)) {
      background: rgba(0, 0, 0, 0.07);
      padding: 0.2rem 0.4rem;
      border-radius: 0.25rem;
      font-family: 'Courier New', Courier, monospace;
      font-size: 0.9em;
    }

    /* Shiki code blocks */
    .post-content :global(pre) {
      border-radius: 0.5rem;
      overflow-x: auto;
      margin-bottom: 1.5rem;
      padding: 1.5rem !important;
      font-size: 0.9rem;
      line-height: 1.7;
    }

    .post-content :global(pre code) {
      background: none;
      padding: 0;
      font-size: inherit;
    }

    .post-content :global(blockquote) {
      border-left: 4px solid var(--primary);
      padding-left: 1.5rem;
      margin: 1.5rem 0;
      color: var(--text-secondary);
      font-style: italic;
    }

    .post-content :global(img) {
      max-width: 100%;
      height: auto;
      border-radius: 0.5rem;
      margin: 2rem 0;
    }

    .post-content :global(table) {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 1.5rem;
      font-size: 0.9375rem;
    }

    .post-content :global(th),
    .post-content :global(td) {
      border: 1px solid var(--border);
      padding: 0.625rem 0.875rem;
      text-align: left;
    }

    .post-content :global(th) {
      background: var(--surface);
      font-weight: 600;
    }

    .post-content :global(hr) {
      border: none;
      border-top: 2px solid var(--border);
      margin: 2rem 0;
    }

    /* Ad Units */
    .ad-unit {
      overflow: hidden;
    }

    .ad-unit-header {
      margin-bottom: 2.5rem;
      min-height: 90px;
    }

    .ad-unit-sidebar {
      margin-top: 1.5rem;
      min-height: 250px;
    }

    .ad-unit-footer {
      margin-top: 3rem;
      margin-bottom: 1rem;
      min-height: 90px;
    }

    /* Post Footer */
    .post-footer {
      margin-top: 4rem;
      padding-top: 2rem;
      border-top: 2px solid var(--border);
    }

    .back-link {
      color: var(--primary);
      text-decoration: none;
      font-weight: 600;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
    }

    .back-link:hover {
      color: var(--primary-dark);
    }

    @media (max-width: 900px) {
      .post-layout {
        grid-template-columns: 1fr;
      }

      .toc {
        order: -1;
        position: static;
      }
    }

    @media (max-width: 768px) {
      .post-title {
        font-size: 2rem;
      }

      .post-content {
        font-size: 1rem;
      }

      .post-content :global(h1) { font-size: 1.75rem; }
      .post-content :global(h2) { font-size: 1.5rem; }
      .post-content :global(h3) { font-size: 1.25rem; }
    }
  </style>
</Layout>
